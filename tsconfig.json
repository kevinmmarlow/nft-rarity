{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": true,
    "paths": {
      "@/*": ["src/*"] // Simply long relative path in import to alias "@"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "public"]
}
